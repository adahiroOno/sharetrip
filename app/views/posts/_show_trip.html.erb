<div class="form-user card" id="title_card">
  <div class="card-body">
    <div class="card-title">
      <% if current_user.id == @post.user_id %>
        <%= link_to(content_tag(:i, 'edit', class: 'material-icons edit_img title_edit_img'), post_path(id: @post.id)) %>
      <% end %>
      <div class="show_title_content">
        <span class="post_show_title">
          <%= @post.trip_title %>
        </span>
        <span class="float-right post_show_total">
          <%= number_to_currency(@post.total_cost ||= 0) %>
        </span>
        <span class="float-right post_show_total">
        <% if @detail.where(post_id: @post.id).select("start_date").present? && @detail.where(post_id: @post.id).select("close_date").present? %>
          <%= calc_date(@detail.where(post_id: @post.id)) %>泊<%= calc_date(@detail.where(post_id: @post.id)) + 1 %>日&nbsp;&nbsp;
        <% else %>
          0泊1日&nbsp;&nbsp;
        <% end %>
      </span>
      </div>
    </div>
    <div class="post_show_content"><%= @post.content %></div>
  </div>
</div>
