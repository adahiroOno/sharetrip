<div class="row">
  <div class="col-lg-6 mx-auto">
    <%= form_for @post do |f| %>
     <%= f.hidden_field :user_id, :value => current_user.id %>
     <div class="form-user card">
       <div class="card-body">
         <div class="card-title">
          <div><span class="float-right">合計:&nbsp;&nbsp;<%= number_to_currency(@post.total_cost ||= 0) %></span></div>
          <div><%= f.label :trip_title, "Trip Title", class: "form-group" %></div>
           <div><%= f.text_field :trip_title, class: "form-control post-card" %></div>
           <div><%= f.label :trip_title, "Detail", class: "form-group" %></div>
           <div><%= f.text_field :content, class: "form-control post-card" %></div>
           <div><%= f.submit "UPDATE", class: "btn btn-primary float-right add-btn" %></div>
         </div>
       </div>
     </div>
    <% end %>
  </div>
</div>