<div class="login">
  <div class="card card-width mx-auto">
    <h2 class="devise-text-title">パスワード再設定</h2>
    
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="field">
        <%= f.label :email, 'メールアドレス', class: 'devise-text' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control info-control mx-auto' %></br>
      </div>
    
      <div class="actions">
        <%= f.submit "パスワード再設定", class: 'btn btn-light btn-control' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
