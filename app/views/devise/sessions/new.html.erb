<div class="login">
　<div class="card card-width mx-auto">
　  <h2 class='devise-text-title'>ログイン</h2>
　  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
     <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email, 'メールアドレス', class: 'devise-text' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control info-control mx-auto' %>
　    </div>

      <div class="field">
        <%= f.label :password, 'パスワード', class: 'devise-text' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control info-control mx-auto' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
       </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: 'btn btn-success btn-control' %>
      </div>
    <% end %>
   
     <%= render "devise/shared/links" %>
  </div>
</div>